@{
    ViewBag.Title = "Home Page";
}
<link href="https://fonts.googleapis.com/css?family=Courgette|Great+Vibes" rel="stylesheet">

<div class="jumbotron">
    <h1>Mabel Jolene Sheepadoodles</h1>
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Assets/SlideShow/01.jpg" alt="puppy01">
        </div>

        <div class="item">
            <img src="~/Content/Assets/SlideShow/02.jpg" alt="puppy02">
        </div>

        <div class="item">
            <img src="~/Content/Assets/SlideShow/03.jpg" alt="puppy03">
        </div>
        <div class="item">
            <img src="~/Content/Assets/SlideShow/04.jpg" alt="puppy04">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

